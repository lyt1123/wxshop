page{
  height: 100%;
  background-color: #f2f2f2;
}
.goods_img{
  width: 100%;
  height: 376rpx;
}
.saoma_img{
  background-color: #ffffff;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  width: 250rpx;
  height: 300rpx;
}
.recommendTitleBg{
  border-bottom-color: lightgray;
  border-bottom-width: 1rpx;
  border-bottom-style: solid;
  width: 100%; 
  height: 60rpx;
  background-color: white;
  display:inline-block;
}
.recommendTitle{
  margin-left: 20rpx;
  margin-top: 10rpx;
  color: pink;
  font-size: 30rpx;
}
.recommendScroll-x{
  background-color: green;
  width: 100%;
  white-space: nowrap;
}

.recommendItem{
  width: 240rpx;
  height: 320rpx;
  background-color: white;
  border-right-style: solid;
  border-right-width: 1rpx;
  border-right-color: lightgray;
  display: inline-block;
}
.recommendItemContent{
  width: 240rpx;
  height: 320rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.recommendItemPrice{
  margin-top: 10rpx;
  color: black;
  font-size: 26rpx;
}
.recommendItemOriPrice{
  color: gainsboro;
  font-size: 26rpx;
  text-decoration:line-through;
}

.floorTitleImg{
  height:200rpx;
  width:100%
}

.floorBgView{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
}

.floorLeftBgView{
  width: 375rpx;
  height: auto;
  display: flex;
  flex-direction: column;
}

.floorImgBig{
  width: 375rpx;
  height: 360rpx;
}

.floorImgSmall{
  width: 375rpx;
  height: 180rpx;
}

.hotTitle{
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  width: 100%;
  text-align: center;
}

.hotContentBg{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
}

.hotItemBg{
  width: 375rpx;
  height: 500rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.hotItemImg{
  width: 365rpx;
  height: 365rpx;
  margin-left: 5rpx;
}

.hotItemTitle{
  padding-left: 10rpx;
  padding-top: 10rpx;
  padding-right: 10rpx;
  color: #E43A72;
  font-size: 35rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.hotPriceBg{
  width: 375rpx;
  height: 40rpx;
  display: flex;
  flex-direction: row;
}

.hotItemPrice{
  padding-left: 10rpx;
  font-size: 35rpx;
}

.hotItemOriPrice{
  padding-left: 50rpx;
  font-size: 35rpx;
  color: gainsboro;
  text-decoration:line-through;
}


